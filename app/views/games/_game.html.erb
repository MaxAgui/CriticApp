<div id="<%= dom_id game %>" class="game_card__container">
  <div class="game_card__cover">
    <% if game.cover.attached? %>
          <%= image_tag game.cover, class: "game_card__cover" %>
    <% end %>
  </div>
  <div class="game_card__content">
    <header class="game_card__header">
      <div>
        <p class="text-lg">
          <%= link_to game.name, game %>
        </p> 
        <p class="text-xs">
          <%= game.release_date.year %>
        </p>
      </div>
      <div class="rating__area">
        <%= game.rating %>
      </div>
    </header>
    <div class="game_card__body">
      <p class="text-xs"><%= game.summary %></p>
    </div>
    <footer class="game_card__footer">
      <p class="text-xs"><%= game.critics.count %> Critics</p>
      <div class="game_card__icons">
          <%= link_to edit_game_path(game) do %>
            <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5.33333 2.33334H2C1.26362 2.33334 0.666668 2.93029 0.666668 3.66667V11C0.666668 11.7364 1.26362 12.3333 2 12.3333H9.33333C10.0697 12.3333 10.6667 11.7364 10.6667 11V7.66667M9.72386 1.39052C10.2446 0.869825 11.0888 0.869825 11.6095 1.39052C12.1302 1.91122 12.1302 2.75544 11.6095 3.27614L5.88562 9H4L4 7.11438L9.72386 1.39052Z" stroke="#7A7A7A" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          <% end %>
          <%= link_to game, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do%>
            <svg width="12" height="14" viewBox="0 0 12 14" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10.6667 3.66667L10.0885 11.7617C10.0386 12.4594 9.45803 13 8.75851 13H3.24149C2.54197 13 1.96139 12.4594 1.91155 11.7617L1.33333 3.66667M4.66667 6.33333V10.3333M7.33333 6.33333V10.3333M8 3.66667V1.66667C8 1.29848 7.70152 1 7.33333 1H4.66667C4.29848 1 4 1.29848 4 1.66667V3.66667M0.666666 3.66667H11.3333" stroke="#7A7A7A" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          <%end%>
      </div>
    </footer>
  </div>
</div>
